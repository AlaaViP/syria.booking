{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build",
  "outputDirectory": "build",

  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        { "key": "Content-Type", "value": "application/manifest+json" },
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/firebase-messaging-sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    },
    {
      "source": "/icons/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "redirects": [
    { "source": "/logo192.png", "destination": "/icons/icon-192.png", "permanent": true },
    { "source": "/logo512.png", "destination": "/icons/icon-512.png", "permanent": true }
  ],

  "rewrites": [
    { "source": "/manifest.json", "destination": "/manifest.json" },
    { "source": "/favicon.ico", "destination": "/favicon.ico" },
    { "source": "/icons/(.*)", "destination": "/icons/$1" },
    { "source": "/firebase-messaging-sw.js", "destination": "/firebase-messaging-sw.js" },

    { "source": "/static/(.*)", "destination": "/static/$1" },
    { "source": "/(.*)/static/(.*)", "destination": "/static/$2" },

    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/(.*)/assets/(.*)", "destination": "/assets/$2" },

    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
